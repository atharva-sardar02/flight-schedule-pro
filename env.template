# ==============================================================================
# FLIGHT SCHEDULE PRO - ENVIRONMENT VARIABLES TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL on AWS RDS)
# ------------------------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=flight_schedule_pro
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# For production, use full connection string:
# DATABASE_URL=postgresql://user:password@host:5432/database

# ------------------------------------------------------------------------------
# AWS Configuration
# ------------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# AWS Credentials (for local development only - use IAM roles in production)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ------------------------------------------------------------------------------
# AWS Cognito (Authentication)
# ------------------------------------------------------------------------------
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# ------------------------------------------------------------------------------
# Weather APIs (Dual Provider for Redundancy)
# ------------------------------------------------------------------------------
# OpenWeatherMap API Key
# Sign up at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# WeatherAPI.com API Key
# Sign up at: https://www.weatherapi.com/
WEATHERAPI_COM_KEY=your_weatherapi_com_key_here

# ------------------------------------------------------------------------------
# AI/LLM Configuration (LangChain + Anthropic Claude)
# ------------------------------------------------------------------------------
# Anthropic API Key for Claude
# Sign up at: https://www.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=flight-schedule-pro

# ------------------------------------------------------------------------------
# AWS SES (Email Notifications)
# ------------------------------------------------------------------------------
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REGION=us-east-1
SES_CONFIGURATION_SET=flight-schedule-pro-emails

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info

# Weather Monitoring Configuration
WEATHER_CHECK_INTERVAL_MINUTES=10
WEATHER_CACHE_TTL_MINUTES=5
WEATHER_LOOKBACK_HOURS=48

# Rescheduling Configuration
RESCHEDULING_WINDOW_DAYS=7
AI_SUGGESTION_COUNT=3
AI_TIMEOUT_SECONDS=15

# Deadline Configuration
PREFERENCE_DEADLINE_HOURS=12
PREFERENCE_DEADLINE_MIN_BEFORE_FLIGHT_MINUTES=30
DEADLINE_REMINDER_HOURS_BEFORE=2

# ------------------------------------------------------------------------------
# AWS Secrets Manager (Production)
# ------------------------------------------------------------------------------
# Use Secrets Manager in production instead of environment variables
SECRETS_MANAGER_SECRET_NAME=flight-schedule-pro/production
USE_SECRETS_MANAGER=false

# ------------------------------------------------------------------------------
# API Gateway Configuration
# ------------------------------------------------------------------------------
API_GATEWAY_BASE_URL=https://api.yourdomain.com
WEBSOCKET_API_URL=wss://ws.yourdomain.com

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_COGNITO_USER_POOL_ID=${COGNITO_USER_POOL_ID}
REACT_APP_COGNITO_CLIENT_ID=${COGNITO_CLIENT_ID}
REACT_APP_COGNITO_REGION=${COGNITO_REGION}

# ------------------------------------------------------------------------------
# Monitoring & Logging (CloudWatch)
# ------------------------------------------------------------------------------
CLOUDWATCH_LOG_GROUP=/aws/lambda/flight-schedule-pro
CLOUDWATCH_METRICS_NAMESPACE=FlightSchedulePro

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_DUAL_WEATHER_PROVIDER=true
ENABLE_AI_RESCHEDULING=true
ENABLE_WEBSOCKET_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true

# ------------------------------------------------------------------------------
# Performance Configuration
# ------------------------------------------------------------------------------
DATABASE_CONNECTION_POOL_MAX=5
DATABASE_CONNECTION_TIMEOUT_MS=2000
DATABASE_IDLE_TIMEOUT_MS=30000

LAMBDA_TIMEOUT_SECONDS=30
LAMBDA_MEMORY_MB=512

# ------------------------------------------------------------------------------
# Security Configuration
# ------------------------------------------------------------------------------
# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION_HOURS=12

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_BURST=100

# ------------------------------------------------------------------------------
# Testing Configuration (for test environment only)
# ------------------------------------------------------------------------------
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flight_schedule_pro_test
MOCK_WEATHER_API=false
MOCK_AI_SERVICE=false

# ------------------------------------------------------------------------------
# Optional: External Integrations (Future Features)
# ------------------------------------------------------------------------------
# Google Calendar (not implemented in MVP)
# GOOGLE_CALENDAR_CLIENT_ID=
# GOOGLE_CALENDAR_CLIENT_SECRET=

# SMS Notifications via AWS SNS (not implemented in MVP)
# SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:flight-schedule-pro-notifications

# ------------------------------------------------------------------------------
# Development Utilities
# ------------------------------------------------------------------------------
# Set to true to enable debug logging
DEBUG=false

# Set to true to enable SQL query logging
LOG_SQL_QUERIES=false

# Set to true to enable mock data
USE_MOCK_DATA=false

